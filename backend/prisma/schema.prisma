generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dataKelas {
  id         Int      @id @default(autoincrement())
  nama       String
  email      String   @unique
  noHp       String
  jk         JenisKelamin
  tempatOjt  String  
  namaKelas  String?  
  sertifikat String?   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum JenisKelamin {
  LAKI
  PEREMPUAN
}


model dataModul {
  id         Int      @id @default(autoincrement())
  judul      String
  namaKelas  String?
  deskripsi  String
  dokumen    String?   
  createdAt  DateTime @default(now())
  updatedAt  DateTime  @updatedAt
}

model dataArsip {
  id         Int      @id @default(autoincrement())
  nomor      String
  judul      String
  deskripsi  String?
  tglSurat   DateTime
  pengirim   String?    
  penerima   String?    
  dokumen    String?    
  createdAt  DateTime   @default(now())
updatedAt  DateTime @updatedAt
}